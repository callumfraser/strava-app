  <div class="page-header">

    <h1>
      Visualise Runs and Rides
      <small>Your last 3 months on Strava</small>
   </h1>

  </div>
  <div>
    <table class="table table-dark tableSize">
      <thead>
        <tr>
          <th scope="col">Runs</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Average runs week</td>
          <td>{{newInput.runs.avPerWeek}}</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Average distance per run</td>
          <td>{{newInput.runs.avDistancePerAct}}m</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td>Average speed per run</td>
          <td>{{newInput.runs.avAvSpeedPerAct}}km/h</td>
        </tr>
        <tr>
          <th scope="row">4</th>
          <td>Fastest average speed</td>
          <td>{{newInput.runs.fastestAvSpeed}}km/h</td>
        </tr>
        <tr>
          <th scope="row">5</th>
          <td>Longest run (distance)</td>
          <td>{{newInput.runs.longestActDistance}}m</td>
        </tr>
        <tr>
          <th scope="row">6</th>
          <td>Longest run (duration)</td>
          <td>{{newInput.runs.longestActDuration}}</td>
        </tr>

      </tbody>
    </table>
    <table class="table table-dark tableSize">
      <thead>
        <tr>
          <th scope="col">Rides</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td>Average rides per week</td>
          <td>{{newInput.rides.avPerWeek}}</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td>Average distance per ride</td>
          <td>{{newInput.rides.avDistancePerAct}}m</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td>Average speed per ride</td>
          <td>{{newInput.rides.avAvSpeedPerAct}}km/h</td>
        </tr>
        <tr>
          <th scope="row">4</th>
          <td>Fastest average speed</td>
          <td>{{newInput.rides.fastestAvSpeed}}km/h</td>
        </tr>
        <tr>
          <th scope="row">5</th>
          <td>Longest ride (distance)</td>
          <td>{{newInput.rides.longestActDistance}}m</td>
        </tr>
        <tr>
          <th scope="row">6</th>
          <td>Longest ride (duration)</td>
          <td>{{newInput.rides.longestActDuration}}</td>
        </tr>

      </tbody>
    </table>

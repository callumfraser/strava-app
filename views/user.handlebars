  <div class="">
    <form class="" action="" method="post">
      <input type="submit" name="logout" value="Log out">
      <input type="submit" name="saveSummary" value="Save this summary">
    </form>

  </div>
  <h2>Previous summaries</h2>
  {{#each previousSummaries}}
    <h3>Date: {{cleanDate date}}</h3>
    <div>
      <h4>Runs</h4>
      <p>Average amount per week: {{runs.avPerWeek}}</p>
      <p>Average Distance per run: {{runs.avDistancePerAct}}</p>
      <p>Average speed per run: {{runs.avAvSpeedPerAct}}</p>
      <p>Fastest average speed: {{uns.fastestAvSpeed}}</p>
      <p>Longest run (distance): {{runs.longestActDistance}}</p>
      <p>Longest run (duration): {{runs.longestActDuration}}</p>
    </div>
    <div>
      <h4>Rides</h4>
      <p>Average amount per week: {{rides.avPerWeek}}</p>
      <p>Average Distance per ride: {{rides.avDistancePerAct}}</p>
      <p>Average speed per ride: {{rides.avAvSpeedPerAct}}</p>
      <p>Fastest average speed: {{rides.fastestAvSpeed}}</p>
      <p>Longest ride (distance): {{rides.longestActDistance}}</p>
      <p>Longest ride (duration): {{rides.longestActDuration}}</p>
    </div>
    {{else}}
      <div>
        <p>No previous summaries</p>

      </div>
  {{/each}}

